@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


@if (User.IsInRole("admin"))
{
    <section>
        <h5 style="color:blue">Welcome, Admin!</h5>
    </section>
}
else if (User.Identity.Name == null)
{
    <section>
        <h5 style="color:blue">Welcome, Tax Professional!</h5>
    </section>
}else if (User.IsInRole("ceo"))
{
    <section>
        <h5 style="color:blue">Welcome, CEO!</h5>
    </section>
}
else
{
    <section>
        <h5 style="color:blue">Welcome, @User.Identity.Name</h5>
    </section>
  
    
}

